@model crudUsuariosMVC.Models.Contacto2
@{
    ViewData["Title"] = "Editar un contacto";
}

<h1 class="text-center">Editar un Contacto con .net 8 MVC</h1>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i>Nuevo usuario
        </a>
    </div>
</div>
<div class="card-body">

    <form asp-action="Editar">

        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>

        <div class="form-group">
            <label asp-for="Nombre" class="contrl-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" readonly/>
            <span asp-validation-for="Nombre" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Apellido" class="contrl-label"></label>
                <input asp-for="Apellido" class="form-control" placeholder="Ingresa el Apellido" readonly />
                <span asp-validation-for="Apellido" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="numeroTelefonico" class="contrl-label"></label>
                    <input asp-for="numeroTelefonico" class="form-control" placeholder="Ingresa el telefono" readonly />
                    <span asp-validation-for="numeroTelefonico" class="text-danger"></span>

                    <div class="form-group">
                        <label asp-for="Mail" class="contrl-label"></label>
                        <input asp-for="Mail" class="form-control" placeholder="Ingresa el Mail" readonly />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">

                        
                        <a asp-asp-controller="Inicio" asp-action="Index" class="btn btn-primary  mx-auto"><i class="fa fa-arrow-left"></i>  Inicio</a>

                    </div>
    </form>
</div>
        </div>
    </div>
</div>
